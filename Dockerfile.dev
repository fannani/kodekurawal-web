FROM node:12
ARG REACT_APP_BASE_URL
ARG REACT_APP_API_URL
ARG REACT_APP_SERVER_URL
ENV REACT_APP_BASE_URL=$REACT_APP_BASE_URL
ENV REACT_APP_API_URL=$REACT_APP_API_URL
ENV REACT_APP_SERVER_URL=$REACT_APP_SERVER_URL
ENV CI=true
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install
COPY . .
CMD [ "npm","start"]
